<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

<div class="form-group">
  <p>名前:</p>
  <p>
    <%= f.text_field :name, class: "form-horizontal", placeholder: "名前" %>
  </p>
</div>

<div class="form-group">
  <p>内容:</p>
  <p><%= f.text_area :body, class: "form-control", placeholder: "内容" %></p>
  <%= f.submit class: "btn btn-sm btn-primary" %>
</div>

<% end %>